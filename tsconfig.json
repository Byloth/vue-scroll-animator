{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
