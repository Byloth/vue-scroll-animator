{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "build",
    "dist",
    "node_modules",
    "types"
  ]
}
